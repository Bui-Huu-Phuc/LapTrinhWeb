
@{
    ViewBag.Title = "StudentWithoutSql";
}

<h2>StudentWithoutSql</h2>
@using myWebsite.Models;

<div class="form-group">
    <form action="/Student/StudentByID" method="get">
        <input type="text" name="StudentID" class="form-group" /> &emsp;
        <input type="submit" value="Find" class="btn btn-primary" />
    </form>
</div>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Class</th>
        <th>Sex</th>
        <th>Birthday</th>
    </tr>
    @foreach (var item in TempData["Student"] as List<Student>)
    {
        <tr>
            <td>@item.StudentID</td>
            <td>@item.StudentName</td>
            <td>@item.ClassName</td>
            <td>@(Convert.ToBoolean(item.Sex) ? "Male" : "Female")</td>
            <td>@item.Birthday.ToShortDateString()</td>
        </tr>
    }
</table>